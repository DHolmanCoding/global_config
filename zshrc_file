# General Bash
alias c="clear"
alias ll='ls -lah'

# Git

# Github Cli

# Docker
alias d='docker'
alias dps='docker ps'

# Docker Compose
alias dc='docker-compose'
alias dcdown='docker-compose down'
alias dcbuild='docker-compose build'
alias dcup='docker-compose up'
alias dcc='docker-compose down && docker-compose build && docker-compose up'

# Pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv init -)"

# Python
alias fmt='black -l 120'

# Kubernetes
alias k='kubectl'
alias kgp='kubectl get pods'

# Path Extensions
export PATH="$HOME/.poetry/bin:$PATH"

# Zshrc
alias erc="vi ~/.zshrc"
alias src="source ~/.zshrc"
